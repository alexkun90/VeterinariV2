@model IEnumerable<FrontEnd.Models.MascotaViewModel>

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/HomeSections/SectionMascotas.css" asp-append-version="true" />
}

<section class="section-mascotas">
    <div class="section-header">
        <h1 class="section-titulo">Registro de Mascotas</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-create">Agregar Nueva Mascota</a>
    </div>

    <div class="section-tabla">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MascotaId)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreMascota)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoMascota.NombreTipoMascota)</th>
                    <th>@Html.DisplayNameFor(model => model.Raza.NombreRaza)</th>
                    <th>@Html.DisplayNameFor(model => model.Genero)</th>
                    <th>@Html.DisplayNameFor(model => model.Edad)</th>
                    <th>@Html.DisplayNameFor(model => model.Peso)</th>
                    <th>@Html.DisplayNameFor(model => model.ImagenMascota)</th>
                    <th>@Html.DisplayNameFor(model => model.DueñoId)</th>
                    <th>@Html.DisplayNameFor(model => model.CodigoUsuarioCreacion)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                    <th>@Html.DisplayNameFor(model => model.CodigoUsuarioModificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaModificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MascotaId)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreMascota)</td>
                        <td>@Html.DisplayFor(modelItem => item.TipoMascota.NombreTipoMascota)</td>
                        <td>@Html.DisplayFor(modelItem => item.Raza.NombreRaza)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                        <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                        <td>@Html.DisplayFor(modelItem => item.ImagenMascota)</td>
                        <td>@Html.DisplayFor(modelItem => item.DueñoId)</td>
                        <td>@Html.DisplayFor(modelItem => item.CodigoUsuarioCreacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.CodigoUsuarioModificacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaModificacion)</td>
                        <td>
                            @{
                                var estadoClass = item.Estado.HasValue ? (item.Estado.Value ? "badge-success" : "badge-danger") : "badge-secondary";
                                var estadoTexto = item.Estado.HasValue ? (item.Estado.Value ? "Activo" : "Inactivo") : "Sin Definir";
                            }
                            <span class="badge @estadoClass">@estadoTexto</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.MascotaId }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.MascotaId }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.MascotaId }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
