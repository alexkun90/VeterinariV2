@model FrontEnd.Models.MascotaViewModel

@{
    ViewData["Title"] = "Eliminar Mascota";
    <link rel="stylesheet" href="~/css/HomeSections/SectionMascotas.css" asp-append-version="true" />
}

<section class="section-delete-mascota">
    <div class="container">
        <div class="section-header">
            <h1 class="section-titulo">Eliminar Mascota</h1>
            <hr />
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <h3 class="text-danger">¿Está seguro de que desea eliminar esta mascota?</h3>
                <div class="card">
                    <div class="card-body">
                        <h4>Detalles de la Mascota</h4>
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.MascotaId)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.MascotaId)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.NombreMascota)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.NombreMascota)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.TipoMascota)
                            </dt>
                            <dd class="col-sm-8">
                                @{
                                    var nombreTipoMascota = Model.TiposMascotas.FirstOrDefault(m => m.CodigoTipoMascota == Model.TipoMascotaId)?.NombreTipoMascota;
                                }
                                @nombreTipoMascota
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Raza)
                            </dt>
                            <dd class="col-sm-8">
                                
                                @{
                                    var nombreRazaMascota = Model.Razas.FirstOrDefault(m => m.CodigoRaza == Model.RazaId)?.NombreRaza;
                                }
                                @nombreRazaMascota
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Genero)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Genero)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Edad)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Edad)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Peso)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Peso)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.ImagenMascota)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.ImagenMascota)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.DueñoId)
                            </dt>
                            <dd class="col-sm-8">
                                @{
                                    var nombreUsuario = Model.Usuarios.FirstOrDefault(m => m.Id == Model.DueñoId)?.Username;
                                }
                                @nombreUsuario
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CodigoUsuarioCreacion)
                            </dt>
                            <dd class="col-sm-8">
                                @{
                                    var UsuarioCreacion = Model.Usuarios.FirstOrDefault(m => m.Id == Model.CodigoUsuarioCreacion)?.Username;
                                }
                                @UsuarioCreacion
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.FechaCreacion)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.FechaCreacion)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CodigoUsuarioModificacion)
                            </dt>
                            <dd class="col-sm-8">
                                @{
                                    var UsuarioModificacion = Model.Usuarios.FirstOrDefault(m => m.Id == Model.CodigoUsuarioModificacion)?.Username;
                                }
                                @UsuarioModificacion
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.FechaModificacion)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.FechaModificacion)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Estado)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            @Html.HiddenFor(model => model.MascotaId)
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

