@model FrontEnd.Models.MascotaViewModel

@{
    ViewData["Title"] = "Detalles de la Mascota";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-edit-cita container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fas fa-paw"></i> Detalles de la Mascota
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <!-- Contenedor principal con display flex para los datos -->
            <dl class="row mb-0 d-flex flex-wrap">
                <!-- Información principal -->
                <div class="col-md-6">
                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-id-card-alt text-primary me-2"></i> ID de la Mascota:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @Html.DisplayFor(model => model.MascotaId)
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-dog text-success me-2"></i> Nombre de la Mascota:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @Html.DisplayFor(model => model.NombreMascota)
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-cat text-info me-2"></i> Tipo de Mascota:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @{
                                var nombreTipoMascota = Model.TiposMascotas.FirstOrDefault(m => m.CodigoTipoMascota == Model.TipoMascotaId)?.NombreTipoMascota;
                            }
                            @nombreTipoMascota
                        </dd>
                    </div>

                    <div class="d-flex mb-2 mt-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-dog text-warning me-2"></i> Raza:
                        </dt>
                        <dd class="d-flex align-items-center">
                            @{
                                var nombreRazaMascota = Model.Razas.FirstOrDefault(m => m.CodigoRaza == Model.RazaId)?.NombreRaza;
                            }
                            @nombreRazaMascota
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-venus-mars text-danger me-2"></i> Género:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @Html.DisplayFor(model => model.Genero)
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-birthday-cake text-secondary me-2"></i> Edad:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @Html.DisplayFor(model => model.Edad) años
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-weight text-info me-2"></i> Peso:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @Html.DisplayFor(model => model.Peso)kg
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-user-circle text-danger me-2"></i> Dueño o Responsable:
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @{
                                var Responsable = Model.Usuarios.FirstOrDefault(m => m.Username == Model.DueñoId)?.Username;
                            }
                            @Responsable
                        </dd>
                    </div>

                    <div class="d-flex mb-2">
                        <dt class="d-flex align-items-center me-2">
                            <i class="fas fa-clipboard-check text-success me-2"></i> Estado
                        </dt>
                        <dd class="d-flex align-items-center mt-2">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </div>
                </div>

                <!-- Contenedor para la fecha de la cita -->
                @{
                    var  ExistCita = Model.Citas.FirstOrDefault(c => c.MascotaId == Model.MascotaId)?.CitaId;
                }
                @if (ExistCita != null)
                {
                    <div class="col-md-6">

                        <div class="d-flex mb-2">
                            <dt class="d-flex align-items-center me-2">
                                <i class="fas fa-user-md text-primary me-2"></i> Veterinario Encargado:
                            </dt>
                            <dd class="d-flex align-items-center mt-2">
                                @{
                                    var VeteEncargado = Model.Citas.FirstOrDefault(c => c.MascotaId == Model.MascotaId)?.VeterinarioPrincipalId;
                                }
                                @VeteEncargado
                            </dd>
                        </div>

                        <div class="d-flex mb-2">
                            <dt class="d-flex align-items-center me-2">
                                <i class="fas fa-calendar-alt text-success me-2"></i> Fecha Cita:
                            </dt>
                            <dd class="d-flex align-items-center mt-2">
                                @{
                                    var CitaFecha = Model.Citas.FirstOrDefault(c => c.MascotaId == Model.MascotaId)?.FechaHora;
                                }
                                @CitaFecha
                            </dd>
                        </div>

                        <div class="d-flex mb-2">
                            <dt class="d-flex align-items-center me-2">
                                <i class="fas fa-file-alt text-info me-2"></i> Descripción:
                            </dt>
                            <dd class="d-flex align-items-center mt-2">
                                @{
                                    var descripcion = Model.Citas.FirstOrDefault(c => c.MascotaId == Model.MascotaId)?.DescripcionCita;
                                }
                                @descripcion
                            </dd>
                        </div>

                        <div class="d-flex mb-2">
                            <dt class="d-flex align-items-center me-2">
                                <i class="fas fa-file-alt text-warning me-2"></i> Diagnostico:
                            </dt>
                            <dd class="d-flex align-items-center mt-2">
                                @{
                                    var Diagnostico = Model.Citas.FirstOrDefault(c => c.MascotaId == Model.MascotaId)?.Diagnostico;
                                }
                                @Diagnostico
                            </dd>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-6">
                        <div class="d-flex mb-2">
                            <dt class="d-flex align-items-center me-2">
                                <i class=" me-2"></i> Sin Cita 
                            </dt>                        
                        </div>
                    </div>
                }

            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="@Url.Action("IndexCliente")" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <br />
</section>
