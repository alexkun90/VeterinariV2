@model FrontEnd.Models.MascotaViewModel

@{
    ViewData["Title"] = "Detalles de la Mascota";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-edit-cita container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fas fa-paw"></i> Detalles de la Mascota
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    <i class="fas fa-id-card-alt text-primary"></i> ID de la Mascota
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MascotaId)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-dog text-success"></i> Nombre de la Mascota
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreMascota)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-cat text-info"></i> Tipo de Mascota
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TipoMascota.NombreTipoMascota)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-dog text-warning"></i> Raza
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Raza.NombreRaza)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-venus-mars text-danger"></i> Género
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Genero)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-birthday-cake text-secondary"></i> Edad
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Edad)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-weight text-info"></i> Peso
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Peso)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-image text-success"></i> Imagen de la Mascota
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ImagenMascota)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user text-primary"></i> ID del Dueño
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DueñoId)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user-circle text-info"></i> Código de Usuario (Creación)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CodigoUsuarioCreacion)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-calendar-alt text-warning"></i> Fecha de Creación
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaCreacion)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user-circle text-danger"></i> Código de Usuario (Modificación)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CodigoUsuarioModificacion)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-calendar-alt text-secondary"></i> Fecha de Modificación
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaModificacion)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-clipboard-check text-success"></i> Estado
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <br />
</section>
