@model FrontEnd.Models.MedicamentoViewModel

@{
    ViewData["Title"] = "Crear Medicamento";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-citas container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fa fa-medkit"></i> Crear Medicamento
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded shadow-sm"></div>

                <div class="form-group mb-3">
                    <label asp-for="NombreMedicamento" class="form-label fw-bold">Nombre del Medicamento</label>
                    <input asp-for="NombreMedicamento" class="form-control rounded-pill" placeholder="Ingrese el nombre del medicamento" />
                    <span asp-validation-for="NombreMedicamento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Dosis" class="form-label fw-bold">Dosis</label>
                    <input asp-for="Dosis" class="form-control rounded-pill" placeholder="Ingrese la dosis" />
                    <span asp-validation-for="Dosis" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CitaId" class="form-label fw-bold">Cita</label>
                    @Html.DropDownListFor(model => model.CitaId, new SelectList(Model.Citas, "CitaId", "FechaHora"), "--Seleccione la Fecha de la cita--", new { @class = "form-select rounded-pill" })
                    <span asp-validation-for="CitaId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fa fa-arrow-left"></i> Volver a la Lista
                    </a>
                    <input type="submit" value="Crear" class="btn btn-primary rounded-pill px-4" />
                </div>
            </form>
        </div>
    </div>
    <br />
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
