@model FrontEnd.Models.RazasViewModel

@{
    ViewData["Title"] = "Detalles de la Raza";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-edit-cita container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fas fa-dog"></i> Detalles de la Raza
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    <i class="fas fa-barcode text-primary"></i> Código de la Raza
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CodigoRaza)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-dog text-success"></i> Nombre de la Raza
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreRaza)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-paw text-info"></i> Tipo de Mascota ID
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TipoMascota.NombreTipoMascota)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <br />
</section>
