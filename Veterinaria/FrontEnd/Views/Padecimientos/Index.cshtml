@model IEnumerable<FrontEnd.Models.PadecimientosViewModel>

@{
    ViewData["Title"] = "Registro de Padecimientos";
    <link rel="stylesheet" href="~/css/HomeSections/SectionPadecimientos.css" asp-append-version="true" />
}

<section class="section-padecimientos container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fa fa-stethoscope"></i> Registro de Padecimientos
        </h1>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-create">
            <i class="fa fa-plus"></i> Agregar Nuevo Padecimiento
        </a>
        <a class="btn btn-secondary btn-create" asp-area="" asp-controller="Cita" asp-action="Index">
            <i class="fa fa-plus"></i>   Citas
        </a>
        <a class="btn btn-success btn-create" asp-area="" asp-controller="Medicamento" asp-action="Index">
            <i class="fa fa-plus"></i>   Medicamentos
        </a>
        <a class="btn btn-warning btn-create" asp-area="" asp-controller="DesparasitacionesVacuna" asp-action="Index">
            <i class="fa fa-plus"></i>   Desparasitaciones o Vacuna
        </a>
    </div>

    <div class="section-tabla table-responsive">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CodigoPadecimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.NombrePadecimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.Mascota)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CodigoPadecimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombrePadecimiento)</td>
                        <td>
                            @{
                                var nombreMascota = item.Mascotas.FirstOrDefault(m => m.MascotaId == item.MascotaID)?.NombreMascota;
                            }@nombreMascota
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.CodigoPadecimiento }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.CodigoPadecimiento }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.CodigoPadecimiento }, new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
