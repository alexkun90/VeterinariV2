@model FrontEnd.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Details";
}

<section class="section-edit-cita container mt-5 vh-100">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fas fa-user"></i> Detalles Usuario
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    <i class="fas fa-key text-warning"></i> Código Usuario
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Id)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user-edit text-primary"></i> Nombre Usuario
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-envelope text-info"></i> Correo Eléctronico
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user-tag text-success"></i> Roles
                </dt>
                <dd class="col-sm-9">
                    @{
                        var roles = Model.Roles;
                        if (roles != null && roles.Any())
                        {
                            @Html.Raw(roles.First())

                            foreach (var role in roles.Skip(1))
                            {
                                @Html.Raw(" | " + role)
                            }
                        }
                    }
                </dd>
            </dl>

        </div>
    </div>
</section>


