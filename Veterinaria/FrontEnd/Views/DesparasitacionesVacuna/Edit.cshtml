@model FrontEnd.Models.DesparasitacionesVacunaViewModel

@{
    ViewData["Title"] = "Editar Desparasitaciones Vacuna";
    <link rel="stylesheet" href="~/css/HomeSections/SectionDesparasitaciones.css" asp-append-version="true" />
}

<section class="section-edit-desparasitaciones container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fa fa-tachometer-alt"></i> Editar Desparasitaciones y Vacunas
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded shadow-sm"></div>

                @Html.HiddenFor(model => model.CodigoDesparasitacionVacuna)

                <div class="form-group mb-3">
                    <label asp-for="Tipo" class="form-label fw-bold">Tipo</label>
                    <input asp-for="Tipo" class="form-control rounded-pill" placeholder="Ingrese el tipo" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Producto" class="form-label fw-bold">Producto</label>
                    <input asp-for="Producto" class="form-control rounded-pill" placeholder="Ingrese el producto" />
                    <span asp-validation-for="Producto" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MascotaId" class="form-label fw-bold">ID de la Mascota</label>
                    <input asp-for="MascotaId" class="form-control rounded-pill" placeholder="Ingrese el ID de la mascota" />
                    <span asp-validation-for="MascotaId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fa fa-arrow-left"></i> Volver a la Lista
                    </a>
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary rounded-pill px-4" />
                </div>
            </form>
        </div>
    </div>
    <br />
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
