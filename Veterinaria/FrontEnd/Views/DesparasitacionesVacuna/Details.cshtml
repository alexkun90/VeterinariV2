@model FrontEnd.Models.DesparasitacionesVacunaViewModel

@{
    ViewData["Title"] = "Detalles de la Desparasitación o Vacuna";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-edit-cita container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fa fa-syringe"></i> Detalles de la Desparasitación o Vacuna
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    <i class="fas fa-id-card-alt text-primary"></i> Código
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CodigoDesparasitacionVacuna)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-vial text-success"></i> Tipo
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-pills text-info"></i> Producto
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Producto)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-paw text-warning"></i> ID de la Mascota
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MascotaId)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <br />
</section>
