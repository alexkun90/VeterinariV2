@model FrontEnd.Models.CitaViewModel

@{
    ViewData["Title"] = "Crear Cita";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-citas container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fa fa-calendar-plus"></i> Crear Nueva Cita
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded shadow-sm"></div>

                <div class="form-group mb-3">
                    <label asp-for="MascotaId" class="form-label fw-bold">Mascota</label>
                    @Html.DropDownListFor(model => model.MascotaId, new SelectList(Model.Mascotas, "MascotaId", "NombreMascota"), "--Seleccione la Mascota--", new { @class = "form-select rounded-pill" })
                    <span asp-validation-for="MascotaId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaHora" class="form-label fw-bold">Fecha y Hora de la Cita</label>
                    <input asp-for="FechaHora" class="form-control rounded-pill" placeholder="Seleccione la fecha y hora" />
                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VeterinarioPrincipalId" class="form-label fw-bold">Veterinario Principal</label>
                    @Html.DropDownListFor(model => model.VeterinarioPrincipalId, new SelectList(Model.Usuarios, "Id", "Username"), "--Seleccione el veterinario--", new { @class = "form-select rounded-pill" })
                    <span asp-validation-for="VeterinarioPrincipalId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VeterinarioSecundarioId" class="form-label fw-bold">Veterinario Asistente</label>
                    @Html.DropDownListFor(model => model.VeterinarioSecundarioId, new SelectList(Model.Usuarios, "Id", "Username"), "--Seleccione el veterinario--", new { @class = "form-select rounded-pill" })
                    <span asp-validation-for="VeterinarioSecundarioId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DescripcionCita" class="form-label fw-bold">Descripción de la Cita</label>
                    <textarea asp-for="DescripcionCita" class="form-control rounded" rows="3" placeholder="Describa la razón de la cita"></textarea>
                    <span asp-validation-for="DescripcionCita" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Diagnostico" class="form-label fw-bold">Diagnóstico</label>
                    <textarea asp-for="Diagnostico" class="form-control rounded" rows="3" placeholder="Ingrese el diagnóstico provisional"></textarea>
                    <span asp-validation-for="Diagnostico" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Estado" class="form-label fw-bold">Estado de la Cita</label>
                    <select asp-for="Estado" class="form-select rounded-pill">
                        <option value="">Seleccione el estado</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fa fa-arrow-left"></i> Volver a la Lista
                    </a>
                    <input type="submit" value="Crear" class="btn btn-primary rounded-pill px-4" />
                </div>
            </form>
        </div>
    </div>
    <br />
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
