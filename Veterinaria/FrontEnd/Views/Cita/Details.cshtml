@model FrontEnd.Models.CitaViewModel

@{
    ViewData["Title"] = "Detalles de la Cita";
    <link rel="stylesheet" href="~/css/HomeSections/SectionCitas.css" asp-append-version="true" />
}

<section class="section-edit-cita container mt-5">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-titulo text-primary">
            <i class="fa fa-calendar"></i> Detalles de la Cita
        </h1>
    </div>

    <div class="card shadow-lg rounded border-0">
        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3">
                    <i class="fas fa-id-card-alt text-primary"></i> ID de la Cita
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CitaId)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-paw text-success"></i> ID de la Mascota
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MascotaId)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-calendar-alt text-info"></i> Fecha y Hora
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaHora)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user-md text-warning"></i> Veterinario Principal
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.VeterinarioPrincipalId)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-user-nurse text-danger"></i> Veterinario Secundario
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.VeterinarioSecundarioId)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-notes-medical text-secondary"></i> Descripción de la Cita
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DescripcionCita)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-stethoscope text-info"></i> Diagnóstico
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Diagnostico)
                </dd>

                <dt class="col-sm-3">
                    <i class="fas fa-clipboard-check text-success"></i> Estado
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
    <br />
</section>
